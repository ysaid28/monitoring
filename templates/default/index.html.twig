{% extends 'layout.html.twig' %}

{% block title %} Connexion | {{ parent() }} {% endblock %}

{% block body_id %}main{% endblock %}

{% block body_app %}

    <div class="row">
        <div class="col-sm-3">
            <a class="btn btn-sm btn-block btn-default" data-toggle="modal" data-target="#">
                <i class="fa fa-plus fa-fw"></i> Ajouter un projet</a>
        </div>
    </div>

    {% if projects is defined and projects %}
        {% for project in projects %}
            {#{{ dump(project) }}#}
            <section>
                <h4 class="instance instance-title"><i class="fa fa-linux fa-fw"></i>
                    {{ project.name | capitalize }}
                    <form action="#" autocomplete="off">
                        <div class="pull-right btn-switch" id="notify_{{ project.id }}">
                            <input
                                    {% if project.isEnableNotify == true %}
                                        checked
                                    {% endif %}
                                    {#class="hide"#}
                                    id="change_state"
                                    data-size="small"
                                    data-notify-id="{{ project.id }}"
                                    data-notify-name="{{ project.name }}"
                                    data-on="ENABLE NOTIFICATION" data-off="DISABLE NOTIFICATION"
                                    data-width="180"
                                    data-onstyle="success" data-offstyle="default"
                                    data-toggle="toggle" type="checkbox"
                            >
                        </div>
                    </form>
                </h4>
                {% if project.instances is not null %}
                    <table class="table table-hover">
                        {% if project.type =="ec2" %}
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Instance ID</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Started</th>
                                <th>Private IP</th>
                                <th>Public IP</th>
                                <th>VPC</th>
                                <th>Subnet</th>
                                <th class="text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for instance in project.instances if instance.instanceId is defined %}
                                {#{{ dump(instance) }}#}
                                <tr>
                                    <td><a data-toggle="collapse" href="#instance-{{ instance.id }}"
                                           id="btn-{{ instance.id }}"
                                           aria-expanded="false"
                                           aria-controls="{{ instance.id }}"><i
                                                    class="fa fa-plus-circle"></i></a>
                                    </td>
                                    <td>
                                        {% if instance.instanceId is defined and  instance.instanceId %}
                                            {{ instance.instanceId }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>{{ instance.name }}</td>
                                    <td>
                                        {% if instance.state =="" %}
                                            <i class="fa fa-circle fa-fw text-success"
                                               aria-hidden="true"></i>{{ instance.state | capitalize }}

                                        {% elseif instance.state =="stopped" %}
                                            <i class="fa fa-circle fa-fw text-danger"
                                               aria-hidden="true"></i>{{ instance.state | capitalize }}

                                        {% else %}
                                            <i class="fa fa-circle fa-fw text-warning"
                                               aria-hidden="true"></i>{{ instance.state | capitalize }}

                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if instance.launchTime is defined and  instance.launchTime %}
                                            {{ instance.launchTime|date('d/m/y H:i:s') }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if instance.privateIpAddress is defined and  instance.privateIpAddress %}
                                            {{ instance.privateIpAddress }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if instance.publicIpAddress is defined and  instance.publicIpAddress %}
                                            {{ instance.publicIpAddress }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if instance.vpc is defined and instance.vpc %}
                                            <a href="#">{{ instance.vpc.vpcId }}</a>
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if instance.subnet is defined and  instance.subnet %}
                                            <a href="#">{{ instance.subnet.subnetId }}</a>
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="#"
                                           class=" btn btn-xs btn-block btn-default">
                                            <i class="fa fa-search fa-fw"></i>
                                            Voir logs
                                        </a>
                                    </td>
                                </tr>
                                <tr id="instance-{{ instance.id }}" class="collapse">
                                    <td class="td-collapse" colspan="6">
                                    </td>
                                    <td class="td-collapse" colspan="5">
                                    </td>
                                </tr>

                            {% else %}
                                <tr class="warning text-center bold text-danger">
                                    <td colspan="9"> Instance running not found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        {% elseif project.type =="other_instance" %}
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Customer</th>
                                <th>Nom</th>
                                <th>Status</th>
                                <th>Private IP</th>
                                <th>Public IP</th>
                                <th>Host Name</th>
                                <th class="text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for instance in project.instances %}
                                <tr>
                                    <td>
                                        <a data-toggle="collapse" href="#{{ instance.id }}"
                                           id="btn-{{ instance.id }}"
                                           aria-expanded="false"
                                           aria-controls="{{ instance.id }}"><i
                                                    class="fa fa-plus-circle"></i>
                                        </a>
                                    </td>
                                    <td>
                                        {{ instance.customer }}
                                    </td>
                                    <td>
                                        {{ instance.name }}
                                    </td>
                                    <td>
                                        {% if instance.state =="running" %}
                                            <i class="fa fa-circle fa-fw text-success"
                                               aria-hidden="true"></i>{{ instance.state | capitalize }}

                                        {% elseif instance.state =="stopped" %}
                                            <i class="fa fa-circle fa-fw text-danger"
                                               aria-hidden="true"></i>{{ instance.state | capitalize }}

                                        {% else %}
                                            <i class="fa fa-circle fa-fw text-warning"
                                               aria-hidden="true"></i>{{ instance.state | capitalize }}

                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if instance.privateId is defined and instance.privateId %}
                                            {{ instance.privateId }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if instance.publicId is defined and instance.publicId %}
                                            {{ instance.publicId }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if instance.hostName is defined and instance.hostName %}
                                            {{ instance.hostName }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="#"
                                           class=" btn btn-xs btn-block btn-default"><i class="fa fa-search fa-fw"></i>
                                            Voir
                                            logs
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                Data not found
                            {% endfor %}
                            </tbody>
                        {% else %}
                        {% endif %}
                    </table>
                {% endif %}
            </section>

        {% else %}
            <div class="container">
                <div class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="alert alert-warning">
                        Data Not Found
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}

{% endblock %}
