{% block body %}
    <div class="container">
        {% block alert %}
            <section>
                {% for key, flashs in app.session.flashBag.all %}
                    {% for flash in flashs %}
                        <div class="alert alert-{{ key }}">{{ flash|raw }}</div>
                    {% endfor %}
                {% endfor %}
            </section>
        {% endblock %}
        {% block body_app %}
        {% endblock %}
    </div>
{% endblock %}

{% block footer %}

    <div class="container">
        <hr>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; UPro - {{ "now"|date("Y") }} </p>
                </div>
            </div>
        </footer>

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/js/main.js') }}"></script>
{% endblock %}